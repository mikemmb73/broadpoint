<h1><%= candidate.name %></h1>
<p>Previous Employer: <a href="/employers/<%= candidate.previousSlug %>"><%= candidate.previous %></a></p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Address</th>
            <th>Previous Employer</th>
            <th>Areas of Knowledge</th>
            <th>Leads</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td><a href="/candidates/<%= candidate['_id']%>"><%= candidate.name %></a></td>
            <td><%= candidate.phone %></td>
            <td><%= candidate.email %></td>
            <td><%= candidate.address %></td>
            <td><a href="/employers/<%= candidate.previousSlug%>"><%= candidate.previousEmployer %></a></td>
            <td><% for (var i = 0; i < candidate.abilities.length; i++){%>
                <li><%= candidate.abilities[i] %></li>
                <% } %>
            </td>
            <td><% for (var i = 0; i < candidate.leads.length; i++){%>
                <li><a href="/jobs/<%= candidate.leadIds[i] %>"><%= candidate.leads[i] %></a></li>
                <% } %>
            </td>
        </tr>
    </tbody>
</table>

<a href="/candidates/delete/<%= candidate['_id'] %>" class="btn btn-lg btn-danger">Delete Candidate</a>
