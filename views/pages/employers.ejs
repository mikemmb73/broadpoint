<div class="jumbotron text-center">
    <h1>All Employers</h1>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Employer</th>
            <th>Contact Number</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% for (var employer of employers) { %>
            <tr>
                <td><%= employer.name %></td>
                <td><%= employer.phone%></td>
                <td><%= employer.address%></td>
                <td>
                    <a href="/employers/<%= employer.slug %>" class="btn btn-sm btn-primary"><%= employer.name %> Jobs</a>
                </td>
            </tr>

        <% } %>
    </tbody>
</table>
