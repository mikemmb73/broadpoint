<jumbotron class="text-center">
    <h1>Update Candidate <%= candidate['_id'] %></h1>
</jumbotron>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">

        <form action="/candidates/processUpdateCandidate" method="POST">

            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control" value="<%= candidate.phone %>">
            </div>

            <div class="form-group">
                <label>Phone</label>
                <input type="text" name="phone" class="form-control" value="<%= candidate.phone %>">
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="text" name="email" class="form-control" value="<%= candidate.email %>">
            </div>

            <div class="form-group">
                <label>Address</label>
                <input type="text" name="address" class="form-control" value="<%= candidate.pay %>">
            </div>

            <!-- choose the employer -->
            <div class="form-group">
                <label>Previous Employer</label>
                <span class="dropdown">
                    <select name="previousEmployer" class="custom-dropdown__select custom-dropdown__select--white" value="<%= candidate.previousEmployer %>">
                        <% for (var employer of employers){%>
                        <option><%= employer.name %></option>
                        <% } %>
                    </select>
                </span>
            </div>

            <div class="form-group">
                <label>Middle Pay Range</label>
                <input type="text" name="pay" value="<%= candidate.pay %>">
            </div>

            <!-- script that manages the multiple choice box -->
            <script type="text/javascript">
                function selectRequirement(select){
                    var option = select.options[select.selectedIndex];
                    var ul = select.parentNode.getElementsByTagName('ul')[0];

                    var choices = ul.getElementsByTagName('input');
                    for (var i = 0; i < choices.length; i++)
                    if (choices[i].value == option.value)
                    return;

                    var li = document.createElement('li');
                    var input = document.createElement('input');
                    var text = document.createTextNode(option.firstChild.data);

                    input.type = 'hidden';
                    input.name = 'requirements';
                    input.value = option.value;

                    li.appendChild(input);
                    li.appendChild(text);
                    li.setAttribute('onclick', 'this.parentNode.removeChild(this);');

                    ul.appendChild(li);
                }
            </script>

            <!-- choose the requirements for the job -->
            <div class="form-group">
                <label>Skills</label>
                <ul name="items">
                    <% for (var candidateAbilities of candidate.requirements){%>
                     <li onclick="this.parentNode.removeChild(this);">
                     <input type="hidden" name="requirements" value="<%= candidateAbilities %>" /><%= candidateAbilities %></li>
                     <% } %>
                </ul>
                <select onchange="selectRequirement(this);">
                    <% for (var requirement of requirements){%>
                    <option value="<%= requirement.name %>"><%= requirement.name %></option>
                    <% } %>
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg">Add Candidate</button>
            </div>
        </form>

    </div>
</div>
